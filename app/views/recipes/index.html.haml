-#  This file is app/views/recipes/index.html.haml
%h1 Search Recipes
=form_tag recipe_path, :method => :get do
  %table#ingredients_form
    %tr
      %td
        Main Ingredient
      %td
        %select#main_ingredient{:name => "main_ingredient", :required => "true"}
          %option{:value => "select"} Select
          =options_for_select(@main_ingredients)
    %tr
      %td
        Side Ingredient
      %td
        %select#side_ingredient{:name => "side_ingredient", :required => "true"}
          %option{:value => "select"} Select
          =options_for_select(@side_ingredients)
    %tr
      %td
      %td
        %input{:type => "submit", :value => "Submit"}